{
  "manifest_version": 3,
  "name": "AI 助手工具条",
  "version": "1.0",
  "description": "提供翻译、解释、润色、扩写、总结等 AI 辅助功能。",
  "permissions": ["storage", "activeTab", "scripting", "contextMenus"],
  "options_page": "options.html",
  "host_permissions": ["http://ai.wollyxu.com/*"],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
	"default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
		}
	},
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["marked.min.js", "content.js"],
      "css": ["styles.css"]
    }
  ],
  "web_accessible_resources": [{
     "resources": ["marked.min.js", "popup.html", "styles.css"],
     "matches": ["<all_urls>"]
  }]
}